<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_ebebeb"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLedSetting"
            style="@style/NormalText"
            android:text="LED settings" />

        <TextView
            android:id="@+id/tvBleParams"
            style="@style/NormalText"
            android:layout_marginTop="1dp"
            android:text="Bluetooth parameters" />

        <TextView
            android:id="@+id/tvHeartReportSeting"
            style="@style/NormalText"
            android:layout_marginTop="1dp"
            android:text="Heartbeat report settings" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>