<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/lw006_blue_2f84d0">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawableLeft="@drawable/lw006_ic_back"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:paddingLeft="16dp"
            android:text=""
            android:textColor="@color/lw006_white_ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BXP-Button Filter"
            android:textColor="@color/lw006_white_ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onSave"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/lw006_ic_save" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lw006_grey_f2f2f2"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/lw006_white_ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <CheckBox
                android:id="@+id/cb_enable"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/lw006_selector_cb_btn"
                android:text="BXP-Button"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                style="@style/lw006_divider_line"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_enable" />

            <TextView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="Alarm Filter"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_enable" />

            <CheckBox
                android:id="@+id/cb_single_press"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/lw006_selector_cb_btn"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Single Press"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter"
                app:layout_constraintWidth_percent="0.4" />

            <CheckBox
                android:id="@+id/cb_double_press"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/lw006_selector_cb_btn"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Double Press"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter"
                app:layout_constraintWidth_percent="0.6" />

            <CheckBox
                android:id="@+id/cb_long_press"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/lw006_selector_cb_btn"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Long Press"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_single_press"
                app:layout_constraintWidth_percent="0.4" />

            <CheckBox
                android:id="@+id/cb_abnormal_inactivity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/lw006_selector_cb_btn"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Abnormal Inactivity"
                android:textColor="@color/lw006_black_333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_single_press"
                app:layout_constraintWidth_percent="0.6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>